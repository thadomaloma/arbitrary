<% if @post.errors.any? %>
  <h3>The following errors prevented the post from being saved.</h3>
  <ul id="message">
    <% @post.errors.full_messages.each do |msg| %>
       <%= msg %>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @post, local: true, url: confirm_posts_path) do |f| %>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
