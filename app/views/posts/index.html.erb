<h1>Post Listing Page</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to 'List', post_path(post) %></td>
        <td><%= link_to 'Delete', post_path(post), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
